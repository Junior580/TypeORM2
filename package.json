{
    "name": "typeorm4",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.8.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.10",
        "uuid": "^9.0.0"
    },
    "scripts": {
        "dev": "nodemon --exec ts-node ./src/server.ts",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "typeorm-ts-node-commonjs -d ./src/database/data-source.ts migration:generate ./src/database/migrations/default",
        "migration:run": "typeorm-ts-node-commonjs -d ./src/database/data-source.ts migration:run",
        "migration:revert": "typeorm-ts-node-commonjs -d ./src/database/data-source.ts migration:revert",
        "husky:prepare": "husky install"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.14",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}
